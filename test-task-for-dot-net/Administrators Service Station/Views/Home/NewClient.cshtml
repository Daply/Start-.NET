@model Administrators_Service_Station.Models.Client
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Administration panel</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" media="screen" />
    <link href="~/Content/theme.css" rel="stylesheet" media="screen" />
    <link href="~/Content/Site.css" rel="stylesheet" media="screen" />
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-default"><p style="text-align: center;  color: white;font-size: 30px; font-family: 'Arial', courier, serif; font-weight: 800; margin-top: 10px">Administration panel</p></nav>
    <div style="margin-left: 520px" class="col-lg-6">
        <form class="form-horizontal" method="post" action="">
            <fieldset>
                <div class="form-group">
                    <label for="inputFirstName" class="col-lg-2 control-label">First name</label>
                    <div id="inputFirstName" class="text-field editor-field">
                        @Html.EditorFor(model => model.First_Name, new { style = "display:none;" })
                        @Html.ValidationMessageFor(model => model.First_Name)
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputLastName" class="col-lg-2 control-label">Last name</label>
                    <div id="inputLastName" class="text-field editor-field">
                        @Html.EditorFor(model => model.Last_Name)
                        @Html.ValidationMessageFor(model => model.Last_Name)
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputDate" class="col-lg-2 control-label">Date of birth</label>
                    <div class="col-lg-10">
                        <input type="date" id="inputDate" name="Date_Of_Birth">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAddress" class="col-lg-2 control-label">Address</label>
                    <div id="inputAddress" class="text-field editor-field">
                        @Html.EditorFor(model => model.Address)
                        @Html.ValidationMessageFor(model => model.Address)
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPhone" class="col-lg-2 control-label">Phone</label>
                    <div id="inputPhone" class="text-field editor-field">
                        @Html.EditorFor(model => model.Phone)
                        @Html.ValidationMessageFor(model => model.Phone)
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail" class="col-lg-2 control-label">Email</label>
                    <div id="inputEmail" class="text-field editor-field">
                        @Html.EditorFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <input class="btn btn-success" type="submit" value="Submit" />
                    </div>
                </div>
            </fieldset>
        </form>
        @Html.ValidationSummary(true)
    </div>
    <br>
    <div style="margin: 100px" class="next">
        <a href="/Home/Index">&larr; Back to main menu</a>
    </div>
</body>
</html>
