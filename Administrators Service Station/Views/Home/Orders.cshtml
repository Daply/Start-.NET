@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Administration panel</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" media="screen" />
    <link href="~/Content/theme.css" rel="stylesheet" media="screen" />
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-default"><p style="text-align: center;  color: white;font-size: 30px; font-family: 'Arial', courier, serif; font-weight: 800; margin-top: 10px">Administration panel</p></nav>
    <div style="margin: 50px">
        <h3>Car orders</h3>
        <table class="table table-striped table-hover">
            <tr class="warning">
                <td><p>Date</p></td>
                <td><p>Order amount ($)</p></td>
                <td><p>Order status</p></td>
                <td></td>
                <td></td>
            </tr>
            @foreach (var b in ViewBag.Car.Orders)
            {
                <tr>
                    <td><p>@b.Date</p></td>
                    <td><p>@b.Order_Amount</p></td>
                    <td><p>@b.Order_Status</p></td>
                    <td><p><a href="/Home/EditOrder/@b.OrderId">Edit order data</a></p></td>
                    <td><p><a href="/Home/DeleteOrder/@b.OrderId">Delete order</a></p></td>
                </tr>
            }
        </table>
        <p><a href="/Home/AddNewOrder/@ViewBag.Car.CarId">Add order</a></p>
    </div>
    <div style="margin: 50px" class="next">
        <a href="/Home/Cars/@ViewBag.Car.ClientId">&larr; Back to car</a>
    </div>
</body>
</html>