
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Administration panel</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" media="screen" />
    <link href="~/Content/theme.css" rel="stylesheet" media="screen" />
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-default"><p style="text-align: center;  color: white;font-size: 30px; font-family: 'Arial', courier, serif; font-weight: 800; margin-top: 10px">Administration panel</p></nav>
    <div style="margin: 50px"> 
        <h3>Client info</h3>
        <table class="table table-striped table-hover">
            <tr class="success">
                <td><p>First name</p></td>
                <td><p>Last name</p></td>
                <td><p>Date of birth</p></td>
                <td><p>Address</p></td>
                <td><p>Phone</p></td>
                <td><p>Email</p></td>
                <td></td>
            </tr>
                <tr>
                    <td><p>@ViewBag.Client.First_Name</p></td>
                    <td><p>@ViewBag.Client.Last_Name</p></td>
                    <td><p>@ViewBag.Client.Date_Of_Birth</p></td>
                    <td><p>@ViewBag.Client.Address</p></td>
                    <td><p>@ViewBag.Client.Phone</p></td>
                    <td><p>@ViewBag.Client.Email</p></td>
                    <td><p><a href="/Home/Cars/@ViewBag.Client.ClientId">Related cars</a></p></td>
                </tr>
        </table>
    </div>
    <div style="margin: 50px" class="next">
        <a href="/Home/ViewAllClients">&larr; Back to clients base</a>
    </div>
</body>
</html>
